// Custom styles.
// 主页文章添加阴影效果
.post {
   margin-top: 60px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}
// 网站标题栏背景颜色
.site-meta {
  background: $dark; 
}
// 修改网站背景图片
body { 
  background:url(/images/background.jpg);
  background-attachment: fixed;
}